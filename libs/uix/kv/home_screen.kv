<HomeScreen>
    MDBoxLayout:
        orientation: 'vertical'

        MDLabel:
            text: 'CHOOSE FILE'
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            size_hint_x: .8

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 10
            padding: 20

            MDTextField:
                id: input_file
                halign: "center"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint_x: .8
                disabled: 'True'

            MDIconButton:
                icon: 'file'
                theme_icon_color: "Custom"
                icon_color: app.theme_cls.primary_color
                icon_size: "36sp"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: root.filechoose()

        MDRaisedButton:
            text: "GOTO SETTINGS"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            disabled: True if input_file.text == '' else False
            on_release:
                root.check_file()