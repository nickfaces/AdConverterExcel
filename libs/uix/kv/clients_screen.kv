<IconListItem>
    IconLeftWidget:
        icon: root.icon

<CarButton@MDIconButton+MDTooltip>
<ContactButton@MDIconButton+MDTooltip>
<BankButton@MDIconButton+MDTooltip>

<ClientItem>
    size_hint_y: None
    height: 50
    orientation: 'horizontal'
    spacing: 10
    padding: 10
    MDLabel:
        id: label_id
        text: root.label_text
        theme_text_color: "Custom"
        text_color: root.label_text_color
        bold: True
        size_hint_x: .3
    MDDropDownItem:
        id: dropdown_item_id
        size_hint_x: .3
        pos_hint: {'center_x': .5, 'center_y': .5}
        text: ''
        on_release: root.drop(root.dropdown_item_id)
    MDTextField:
        id: textfield_id
        text: ""
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint_x: .3

<ClientsScreen>
    MDScreen:
        MDBoxLayout:
            orientation: 'vertical'
            MDBoxLayout:
                orientation: 'horizontal'
                spacing: 10
                padding: 10
                size_hint_y: .1
                MDLabel:
                    text: 'Поле импорта'
                    halign: 'center'
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.primary_color
                    font_size: '20sp'
                    bold: True
                    size_hint_x: .3
                MDLabel:
                    text: 'Поле'
                    halign: 'center'
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.primary_color
                    font_size: '20sp'
                    bold: True
                    size_hint_x: .3
                MDLabel:
                    text: 'Значение'
                    halign: 'center'
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.primary_color
                    font_size: '20sp'
                    bold: True
                    size_hint_x: .3
            MDBoxLayout:
                orientation: 'horizontal'
                spacing: 10
                size_hint_y: .8
                MDScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    bar_color: app.theme_cls.primary_color
                    bar_width: 5
                    GridLayout:
                        id: my_grid
                        cols:1
                        spacing: 10
                        size_hint_y: None
                        height: self.minimum_height
            MDFloatLayout:
                id: float
                size_hint_y: .1
                MDRaisedButton:
                    id: import_button
                    text: "Импорт"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    size_hint: .1, .7
                    on_release:
                        root.check_choices()

                MDSpinner:
                    id: clients_adapt_spin
                    size_hint: None, None
                    size: dp(36), dp(36)
                    pos_hint: {'center_x': .7, 'center_y': .5}
                    active: False

                CarButton:
                    icon: 'car-2-plus'
                    tooltip_text: 'Дополнительный автомобиль'
                    icon_size: dp(48)
                    pos_hint: {"center_x": .05, "center_y": .5}
                    size_hint: .1, 1
                    on_release:
                        root.add_auto()

                ContactButton:
                    icon: 'account-plus'
                    tooltip_text: 'Дополнительный контакт'
                    icon_size: dp(48)
                    pos_hint: {"center_x": .15, "center_y": .5}
                    size_hint: .1, 1
                    on_release:
                        root.add_contact()

                BankButton:
                    icon: 'bank-plus'
                    tooltip_text: 'Дополнительный счет'
                    icon_size: dp(48)
                    pos_hint: {"center_x": .25, "center_y": .5}
                    size_hint: .1, 1
                    on_release:
                        root.add_bank()









